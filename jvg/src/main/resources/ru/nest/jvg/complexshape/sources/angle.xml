<shape>
	<info>
		<name>Угол</name>
		<descr>Угол, настраиваемый по трем точкам.</descr>
	</info>
	<variables>
		<var id="x1" value="0" argument="yes" />
		<var id="y1" value="-80" argument="yes" />
		<var id="x2" value="0" argument="yes" />
		<var id="y2" value="0" argument="yes" />
		<var id="x3" value="0" argument="yes" />
		<var id="y3" value="80" argument="yes" />
	</variables>

	<path fill="no">
		<moveto x="x1" y="y1" />
		<lineto x="x2" y="y2" />
		<lineto x="x3" y="y3" />
	</path>

	<bounds>
		<point x="x1" y="y1" />
		<point x="x2" y="y2" />
		<point x="x3" y="y3" />
	</bounds>

	<manage>
		<point x="x1" y="y1" />
		<point x="x2" y="y2" />
		<point x="x3" y="y3" />
	</manage>

	<connections>
		<connection x="x1" y="y1" type="client" />
		<connection x="x2" y="y2" type="client" />
		<connection x="x3" y="y3" type="client" />
	</connections>

	<point-on-add x="x2" y="y2" />
</shape>
