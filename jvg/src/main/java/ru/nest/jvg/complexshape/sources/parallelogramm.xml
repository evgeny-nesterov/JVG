<shape>
	<info>
		<name>Параллелограмм</name>
		<descr></descr>
	</info>
	<variables>
		<var id="x1" value="25" argument="yes" />
		<var id="y1" value="0" argument="yes" />
		<var id="x2" value="100" argument="yes" />
		<var id="y2" value="0" argument="yes" />
		<var id="x3" value="0" argument="yes" />
		<var id="y3" value="50" argument="yes" />

		<var id="x4">
			<get>x2 + x3 - x1</get>
		</var>
		<var id="y4">
			<get>y2 + y3 - y1</get>
		</var>
	</variables>

	<path>
		<moveto x="x1" y="y1" />
		<lineto x="x2" y="y2" />
		<lineto x="x4" y="y4" />
		<lineto x="x3" y="y3" />
		<close />
	</path>

	<bounds>
		<point x="x1" y="y1" />
		<point x="x2" y="y2" />
		<point x="x4" y="y4" />
		<point x="x3" y="y3" />
	</bounds>

	<manage>
		<point x="x1" y="y1" />
		<point x="x2" y="y2" />
		<point x="x3" y="y3" />
	</manage>

	<connections>
		<connection x="x1" y="y1" type="server" />
		<connection x="x2" y="y2" type="server" />
		<connection x="x3" y="y3" type="server" />
		<connection x="x4" y="y4" type="server" />
	</connections>
</shape>
