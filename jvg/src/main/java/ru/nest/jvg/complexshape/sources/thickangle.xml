<shape>
	<info>
		<name>Угол с настраиваемой шириной</name>
		<descr>Угол, настраиваемый по трем точкам. Настраивается ширина.</descr>
	</info>
	<variables>
		<var id="x1" value="0" argument="yes" />
		<var id="y1" value="0" argument="yes" />
		<var id="x2" value="0" argument="yes" />
		<var id="y2" value="80" argument="yes" />
		<var id="x3" value="80" argument="yes" />
		<var id="y3" value="80" argument="yes" />
		<var id="width" value="10" argument="yes" />

		<var id="radius1">
			<get>veclen(x1, y1, x2, y2)</get>
		</var>
		<var id="cos1">
			<get>(radius1 != 0) ? (x2 - x1) / radius1 : 0</get>
		</var>
		<var id="sin1">
			<get>(radius1 != 0) ? (y2 - y1) / radius1 : 1</get>
		</var>
		<var id="ort_dx1">
			<get>width * sin1</get>
		</var>
		<var id="ort_dy1">
			<get>width * cos1</get>
		</var>

		<var id="radius2">
			<get>veclen(x2, y2, x3, y3)</get>
		</var>
		<var id="cos2">
			<get>(radius2 != 0) ? (x3 - x2) / radius2 : 0</get>
		</var>
		<var id="sin2">
			<get>(radius2 != 0) ? (y3 - y2) / radius2 : 1</get>
		</var>
		<var id="ort_dx2">
			<get>width * sin2</get>
		</var>
		<var id="ort_dy2">
			<get>width * cos2</get>
		</var>

		<var id="ax1">
			<get>x1 - ort_dx1</get>
		</var>
		<var id="ay1">
			<get>y1 + ort_dy1</get>
		</var>
		<var id="ax2">
			<get>x1 + ort_dx1</get>
		</var>
		<var id="ay2">
			<get>y1 - ort_dy1</get>
		</var>
		<var id="ax3">
			<get>x2 - ort_dx1</get>
		</var>
		<var id="ay3">
			<get>y2 + ort_dy1</get>
		</var>
		<var id="ax4">
			<get>x2 + ort_dx1</get>
		</var>
		<var id="ay4">
			<get>y2 - ort_dy1</get>
		</var>

		<var id="bx1">
			<get>x2 - ort_dx2</get>
		</var>
		<var id="by1">
			<get>y2 + ort_dy2</get>
		</var>
		<var id="bx2">
			<get>x2 + ort_dx2</get>
		</var>
		<var id="by2">
			<get>y2 - ort_dy2</get>
		</var>
		<var id="bx3">
			<get>x3 - ort_dx2</get>
		</var>
		<var id="by3">
			<get>y3 + ort_dy2</get>
		</var>
		<var id="bx4">
			<get>x3 + ort_dx2</get>
		</var>
		<var id="by4">
			<get>y3 - ort_dy2</get>
		</var>

		<var id="point">
			<get>intersection(ax1,ay1,ax3,ay3, bx1,by1,bx3,by3)</get>
		</var>
		<var id="ix">
			<get>getX(point)</get>
		</var>
		<var id="iy">
			<get>getY(point)</get>
		</var>

		<var id="tmp" />
		<var id="wx">
			<get>(ax1 + ix) / 2</get>
			<set param="tmp">$</set>
		</var>
		<var id="wy">
			<get>(ay1 + iy) / 2</get>
			<set param="width">-orth(x1, y1, x2, y2, tmp, $)</set>
		</var>
	</variables>

	<path>
		<moveto x="x1" y="y1" />
		<lineto x="ax1" y="ay1" />
		<lineto x="ix" y="iy" />
		<lineto x="bx3" y="by3" />
		<lineto x="x3" y="y3" />
		<lineto x="x2" y="y2" />
		<close />
	</path>

	<bounds>
		<point x="x1" y="y1" />
		<point x="ax1" y="ay1" />
		<point x="ix" y="iy" />
		<point x="bx3" y="by3" />
		<point x="x3" y="y3" />
		<point x="x2" y="y2" />
	</bounds>

	<manage>
		<point x="x1" y="y1" />
		<point x="x2" y="y2" />
		<point x="x3" y="y3" />
		<point x="wx" y="wy" />
	</manage>

	<connections>
		<connection x="x1" y="y1" type="client" />
		<connection x="x2" y="y2" type="client;server" />
		<connection x="x3" y="y3" type="client" />
	</connections>

	<point-on-add x="(ix + x2) / 2" y="(iy + y2) / 2" />
</shape>
